/* components/l-goods-item/l-goods-item.wxss */
.goods-img{
  width: 100%;
  border-radius: 20rpx;
  padding-bottom: 100rpx;
}
.desc-info{
  position: relative;
  margin: 10rpx 0;
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 5rpx;
}
.title{
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.price{
  font-size: 28rpx;
  color: #ff5777;
}
.cfav{
  font-size: 28rpx;
}
.icon{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 5rpx;
  padding: 0 6rpx;
}