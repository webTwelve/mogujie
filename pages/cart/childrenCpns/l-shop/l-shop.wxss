/* pages/cart/childrenCpns/l-shop/l-shop.wxss */
.cartItem{
  align-items: center;
  justify-content: space-around;
  display: flex;
  height: 300rpx;
  border-bottom: 2rpx solid gray;
}
.img{
  height: 140px;
  border-radius: 10rpx;
}
.content{
  width: 420rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.title{
  color: black;
  width: 420rpx;
  font-size: 30rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}
.desc{
  font-size: 30rpx;
  margin: 40rpx 0;
  width: 420rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.priceWrap{
  width: 420rpx;
  display: flex;
  justify-content: space-between;
}
.price{
  color: #f55777;
  font-size: 34rpx;
}
.number{
  font-size: 30rpx;
  padding: 0rpx 10rpx;
}
.count{
  display: flex;
  align-items: center;
}
.sub{
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #ccc;
  text-align: center;
  line-height: 30rpx;
}
.add{
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #ccc;
  text-align: center;
  line-height: 30rpx;
}